<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Isi warna shape -->
    <solid android:color="#989797" />

    <!-- Border stroke (opsional) -->
    <stroke
        android:width="2dp"
        android:color="#787878" />

    <!-- Sudut membulat -->
    <corners android:radius="50dp" />

    <!-- Padding -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- Shadow item -->
    <item android:bottom="5dp">
        <shape>
            <size
                android:height="5dp"
                android:width="5dp" />
        </shape>
    </item>
</shape>
