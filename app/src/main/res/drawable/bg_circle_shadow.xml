<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bayangan -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#D3D3D3" /> <!-- Warna bayangan -->
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
    <!-- Lingkaran -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- Warna lingkaran utama -->
        </shape>
    </item>
</layer-list>
