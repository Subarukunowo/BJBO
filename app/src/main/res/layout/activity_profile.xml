<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ProfileActivity">

    <!-- Header Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:src="@drawable/logo"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Close Icon -->
    <ImageView
        android:id="@+id/closeIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_close"
        android:contentDescription="Close"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Menu List -->
    <LinearLayout
        android:id="@+id/menuList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Akun Saya -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/ivAkun"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Akun Saya"
                android:src="@drawable/ic_account" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tvAkunSaya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Akun Saya"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tvAkunDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Akun, dan setings"
                    android:textSize="12sp"
                    android:textColor="#888" />
            </LinearLayout>
        </LinearLayout>

        <!-- Notifikasi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/ivNotifikasi"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Notifikasi"
                android:src="@drawable/ic_notification" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tvNotifikasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifikasi"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tvNotifikasiDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dapatkan informasi terbaru dari aplikasi kami"
                    android:textSize="12sp"
                    android:textColor="#888" />
            </LinearLayout>
        </LinearLayout>

        <!-- Produk Dijual -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/ivProdukDijual"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Produk Dijual"
                android:src="@drawable/ic_produk_dijual" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tvProdukDijual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Produk Dijual"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tvProdukDijualDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat daftar produk untuk dijual"
                    android:textSize="12sp"
                    android:textColor="#888" />
            </LinearLayout>
        </LinearLayout>

        <!-- Produk Disukai -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/ivProdukDisukai"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Produk Disukai"
                android:src="@drawable/ic_produk_disukai" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tvProdukDisukai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Produk Disukai"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tvProdukDisukaiDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat produk yang Anda inginkan"
                    android:textSize="12sp"
                    android:textColor="#888" />
            </LinearLayout>
        </LinearLayout>

        <!-- Orderan Saya -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/ivOrderanSaya"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Orderan Saya"
                android:src="@drawable/ic_orderan_saya" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tvOrderanSaya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orderan Saya"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tvOrderanSayaDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Semua Orderan"
                    android:textSize="12sp"
                    android:textColor="#888" />
            </LinearLayout>
        </LinearLayout>
        <!-- Orderan Saya -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/ivTransaksiSaya"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Orderan Saya"
                android:src="@drawable/ic_transaksi_saya" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tvTransaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orderan Saya"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tvTranksaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Semua Transaksi Anda"
                    android:textSize="12sp"
                    android:textColor="#888" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Footer Buttons -->
    <LinearLayout
        android:id="@+id/footerButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="#888"
            android:text="Settings"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#000"
            android:text="Logout"
            android:textColor="#FFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
