<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Form Laporan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="16dp" />

        <!-- Jenis Laporan -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Laporan"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerJenisLaporan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Teks Laporan -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teks Laporan"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etTeksLaporan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan teks laporan Anda..."
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Button Kirim -->
        <Button
            android:id="@+id/btnKirimLaporan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kirim Laporan"
            android:textColor="#FFF"
            android:backgroundTint="#FF6347" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
